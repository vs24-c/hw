<!DOCTYPE html>
<html>
  <head>
    <title>Produts List</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <h1>Products Page</h1>
    <div class="wrapper">
      <main class="page">
        <div class="page__container">
          <div class="page__cards card">
            <div class="card__product">
              <table>
                <thead>
                  <tr>
                    <th>id</th>
                    <th>Product Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Delete</th>
                    <th>Edit</th>
                  </tr>
                </thead>
                <% products.forEach(product => { %>
                <tbody>
                  <tr>
                    <td><a href="/products/<%= product.id %>"><%= product.id %></a></td>
                    <td><%= product.name %></td>
                    <td><%= product.description %></td>
                    <td>$<%= product.price %></td>
                    <td>
                      <button onclick="deleteObject(`<%= product.id %>`)" class="card__btn_del">
                        Delete
                      </button>
                    </td>
                    <td>
                      <a href="/products/edit/<%= product.id %>" class="card__btn_edit">Edit</a>
                    </td>
                  </tr>
                </tbody>
                <% }); %>
              </table>
            </div>
            <div class="card__btn">
              <a class="product__btn" href="/">Back to Home Page</a>
              <a class="product__btn" href="/products/create">Go to Add Product</a>
            </div>
          </div>
        </div>
      </main>
    </div>
  </body>
  <script src="/javascripts/script.js"></script>
</html>
